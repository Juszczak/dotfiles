set $mod Mod4
font pango: Source Code Pro 10
floating_modifier $mod
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+q kill
bindsym $mod+d exec dmenu_run
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

set $ws1 "1:webapp"
set $ws2 "2:vim"
set $ws3 "3:chrome"
set $ws7 "7:devtools"
# todo

workspace 1 output HDMI-1
workspace 2 output VGA-1
workspace 3 output VGA-1
workspace 7 output LVDS-1
workspace 8 output LVDS-1
workspace 9 output LVDS-1
workspace 10 output LVDS-1

bindsym $mod+1 workspace 1:webapp
bindsym $mod+2 workspace 2:vim
bindsym $mod+3 workspace 3:chrome
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7:devtools
bindsym $mod+8 workspace 8:chat
bindsym $mod+9 workspace 9:spotify
bindsym $mod+0 workspace 10:tmux

bindsym $mod+Shift+1 move container to workspace 1:webapp
bindsym $mod+Shift+2 move container to workspace 2:vim
bindsym $mod+Shift+3 move container to workspace 3:chrome
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7:devtools
bindsym $mod+Shift+8 move container to workspace 8:chat
bindsym $mod+Shift+9 move container to workspace 9:spotify
bindsym $mod+Shift+0 move container to workspace 10:tmux

assign [class="DevTools - localhost/"] $ws7

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
  bindsym j resize shrink width 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize shrink height 10 px or 10 ppt
  bindsym semicolon resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# client.focused #e7e7e7 #2b2b2b #e7e7e7 color7 color6

bar {
  status_command i3status
  position top
  strip_workspace_numbers yes

  colors {
    background #101010
    statusline #dcdcdc
    focused_workspace #101010 #333333 #f5f5f5
    active_workspace #101010 #333333 #aaaaaa
    inactive_workspace #101010 #333333 #999999
  }

  # mode hide
  # hidden_state hide
  # modifier Mod1
}

client.background #101010

client.focused          #101010 #101010 #00BAA7 #101010
client.focused_inactive #101010 #101010 #ffffff #101010
client.unfocused        #101010 #101010 #888888 #101010
client.urgent           #C10004 #101010 #ffffff #101010

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +1%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -1%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

new_window 1pixel
